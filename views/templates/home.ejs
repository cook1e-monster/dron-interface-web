<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Bootstrap 101 Template</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->


    <!-- LOAD SOCKET IO -->
    <script type='text/javascript' src='http://localhost:3000/socket.io/socket.io.js'></script>

    <script type='text/javascript'>
      function action() {

        function sendActions( action ) {
          let socket = io.connect(':3000');
          socket.emit('dron', action)
        }

        let attr = this.getAttribute('data-action');
        sendActions( attr );
      }

      function addEvents() {
        var dronActions = document.getElementsByClassName('dron-action')

        for (let i=0; i<dronActions.length; i++) {
          dronActions[i].addEventListener("click", action, false);
        }
      }


      window.onload = function() {
        addEvents()
      };
    </script>


  </head>
  <body>
    <div class='container'>
      <div class='row'>
        <div class='col-md-4'>
          <div>
            <button type="button" class="btn btn-default dron-action" data-action='{ "pad": 1, "action": "up" }'>
                <i class="fa fa-arrow-up btn-lg" aria-hidden="true"></i>
            </button>
          </div>

          <div>
            <button type="button" class="btn btn-default dron-action" data-action='{ "pad": 1, "action": "left" }'>
              <i class="fa fa-arrow-left btn-lg" aria-hidden="true"></i>
            </button>

            <button type="button" class="btn btn-default dron-action" data-action='{ "pad": 1, "action": "right" }'>
              <i class="fa fa-arrow-right btn-lg" aria-hidden="true"></i>
            </button>
          </div>

          <div>
              <button type="button" class="btn btn-default dron-action" data-action='{ "pad": 1, "action": "down" }'>
              <i class="fa fa-arrow-down btn-lg" aria-hidden="true"></i>
            </button>
          </div>
        </div>


        <div class='col-md-4'>
          <button type="button" class="btn btn-success btn-lg dron-action" data-action='{ "pad": 0, "action": "start" }'>
            <b> Start </b>
          </button>

          <button type="button" class="btn btn-danger btn-lg dron-action" data-action='{ "pad": 0, "action": "stop" }'>
            <b> Stop </b>
          </button>


          <ul class='list-unstyled'>
            <li>
              <button type="button" class="btn btn-default btn-lg">
